{
  "name": "memento-svelte-typescript-tailwind",
  "version": "1.1.2",
  "description": "Template to create a static site with Svelte, Typescript and TailwindCSS",
  "scripts": {
    "clean": "node clean-build.js",
    "build": "npm run clean && rollup -c",
    "deploy": "node ./gh-pages.js",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "check-updates": "npx npm-check-updates",
    "check-updates:minor": "npx npm-check-updates --target minor",
    "check-updates:patch": "npx npm-check-updates --target patch"
  },
  "devDependencies": {
    "@el3um4s/rollup-plugin-css-only": "^1.0.0",
    "@el3um4s/rollup-plugin-terser": "^1.0.2",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "autoprefixer": "^10.4.12",
    "gh-pages": "^4.0.0",
    "postcss": "^8.4.18",
    "postcss-load-config": "^4.0.1",
    "rollup": "^3.2.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.2.0",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "sirv-cli": "^2.0.2"
  },
  "type": "module"
}
